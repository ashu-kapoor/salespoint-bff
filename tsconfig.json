{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": false,
        "typeRoots": ["src/@types"],
        "strict": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true //due to lodash issue
    },
    "files": ["src/@types/graphql.d.ts"],
    "include": ["src/**/*","src/**/*.graphql"],
    "exclude": ["node_modules","**/*.spec.ts"]
}